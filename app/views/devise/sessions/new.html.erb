<div class="min-h-screen bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center p-2 sm:p-4">
  <!-- フローティング背景アニメーション -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="floating-circle absolute w-16 sm:w-20 h-16 sm:h-20 bg-white/10 rounded-full animate-bounce" style="top: 10%; left: 15%; animation-delay: 0s;"></div>
    <div class="floating-circle absolute w-12 sm:w-16 h-12 sm:h-16 bg-white/10 rounded-full animate-bounce" style="top: 70%; left: 80%; animation-delay: 2s;"></div>
    <div class="floating-circle absolute w-10 sm:w-12 h-10 sm:h-12 bg-white/10 rounded-full animate-bounce" style="top: 40%; left: 10%; animation-delay: 4s;"></div>
    <div class="floating-circle absolute w-12 sm:w-14 h-12 sm:h-14 bg-white/10 rounded-full animate-bounce" style="top: 20%; left: 70%; animation-delay: 1s;"></div>
    <div class="floating-circle absolute w-14 sm:w-18 h-14 sm:h-18 bg-white/10 rounded-full animate-bounce" style="top: 60%; left: 30%; animation-delay: 3s;"></div>
  </div>

  <!-- メインコンテナ - レスポンシブ対応 -->
  <div class="w-full max-w-sm sm:max-w-md lg:max-w-lg relative z-10">
    
    <!-- ロゴ・ヘッダー -->
    <div class="text-center mb-6 sm:mb-8">
      <div class="inline-block bg-white/95 backdrop-blur-lg border border-white/30 rounded-full p-4 sm:p-6 mb-4 sm:mb-6 shadow-2xl">
        <div class="text-2xl sm:text-3xl lg:text-4xl">🌟</div>
      </div>
      <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white mb-2 drop-shadow-lg">
        OKKAKE
      </h1>
      <p class="text-sm sm:text-base lg:text-lg text-blue-100 drop-shadow">
        推し活向け家計簿
      </p>
    </div>

    <!-- ログインフォーム -->
    <div class="bg-white/95 backdrop-blur-lg border border-white/30 rounded-xl sm:rounded-2xl p-6 sm:p-8 shadow-2xl">
      <div class="text-center mb-4 sm:mb-6">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-2">
          <i class="fas fa-sign-in-alt mr-2 text-blue-600"></i>
          ログイン
        </h2>
        <p class="text-sm sm:text-base text-gray-600">アカウントにログインしてください</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                   html: { class: "space-y-4 sm:space-y-6" }) do |f| %>
        
        <!-- メールアドレス -->
        <div>
          <%= f.label :email, "メールアドレス", 
                      class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-envelope text-gray-400 text-sm"></i>
            </div>
            <%= f.email_field :email, 
                              autofocus: true, 
                              autocomplete: "email",
                              placeholder: "your@email.com",
                              class: "w-full pl-9 sm:pl-10 pr-3 sm:pr-4 py-2.5 sm:py-3 border-2 border-blue-200 rounded-lg sm:rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white/80 backdrop-blur-sm text-sm sm:text-base" %>
          </div>
        </div>

        <!-- パスワード -->
        <div>
          <%= f.label :password, "パスワード", 
                      class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-lock text-gray-400 text-sm"></i>
            </div>
            <%= f.password_field :password, 
                                 autocomplete: "current-password",
                                 placeholder: "パスワードを入力",
                                 class: "w-full pl-9 sm:pl-10 pr-3 sm:pr-4 py-2.5 sm:py-3 border-2 border-blue-200 rounded-lg sm:rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white/80 backdrop-blur-sm text-sm sm:text-base" %>
          </div>
        </div>

        <!-- ログイン状態保持 -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, 
                            class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2" %>
            <%= f.label :remember_me, "ログイン状態を保持する", 
                        class: "ml-2 text-sm text-gray-700 cursor-pointer" %>
          </div>
        <% end %>

        <!-- ログインボタン -->
        <div>
          <%= f.submit "ログイン", 
                       class: "w-full bg-gradient-to-r from-blue-500 to-blue-600 text-white py-2.5 sm:py-3 px-4 sm:px-6 rounded-lg sm:rounded-xl font-semibold text-base sm:text-lg hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transform hover:scale-105 transition-all duration-200 shadow-lg" %>
        </div>
      <% end %>

      <!-- その他のリンク -->
      <div class="mt-6 sm:mt-8 space-y-3 sm:space-y-4">
        <div class="text-center">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-white text-gray-500">または</span>
            </div>
          </div>
        </div>

        <!-- サインアップリンク -->
        <div class="text-center">
          <%= link_to new_registration_path(resource_name), 
                      class: "inline-flex items-center justify-center w-full sm:w-auto px-4 sm:px-6 py-2.5 sm:py-3 border-2 border-blue-300 text-blue-700 rounded-lg sm:rounded-xl hover:bg-blue-50 transition-colors font-semibold text-sm sm:text-base" do %>
            <i class="fas fa-user-plus mr-2"></i>
            新規アカウント作成
          <% end %>
        </div>

        <!-- パスワード忘れリンク -->
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <div class="text-center">
            <%= link_to "パスワードを忘れた方", new_password_path(resource_name), 
                        class: "text-blue-600 hover:text-blue-800 text-sm underline" %>
          </div>
        <% end %>
      </div>

      <!-- テストユーザー情報（開発環境のみ） -->
      <% if Rails.env.development? %>
        <div class="mt-4 sm:mt-6 p-3 sm:p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <div class="text-center">
            <p class="text-xs font-semibold text-yellow-800 mb-2">🧪 テスト用アカウント</p>
            <div class="text-xs text-yellow-700 space-y-1">
              <p>Email: <span class="font-mono bg-yellow-100 px-1 rounded text-xs">test@okkake.com</span></p>
              <p>Password: <span class="font-mono bg-yellow-100 px-1 rounded text-xs">password123</span></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- フッター -->
    <div class="text-center mt-6 sm:mt-8">
      <p class="text-blue-100 text-xs sm:text-sm drop-shadow">
        © 2025 OKKAKE - 推し活支出を賢く管理
      </p>
    </div>
  </div>
</div>

<!-- カスタムスタイル - レスポンシブ対応 -->
<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
  }
  
  .floating-circle {
    animation: float 6s ease-in-out infinite;
  }
  
  /* フォーカス時のアニメーション - レスポンシブ対応 */
  input:focus {
    transform: scale(1.01);
  }
  
  @media (min-width: 640px) {
    input:focus {
      transform: scale(1.02);
    }
  }
  
  /* ボタンのリップルエフェクト */
  .submit-btn {
    position: relative;
    overflow: hidden;
  }
  
  .submit-btn:active {
    transform: scale(0.98);
  }
  
  /* タッチデバイス用の調整 */
  @media (hover: none) and (pointer: coarse) {
    .hover\:scale-105:hover {
      transform: scale(1.02);
    }
  }
  
  /* 小さな画面での調整 */
  @media (max-width: 480px) {
    .bg-gradient-to-br {
      padding: 1rem;
    }
  }
</style>