<div class="min-h-screen bg-gradient-to-br from-blue-500 to-blue-600 lg:ml-64">
  <!-- モバイル用ページヘッダー -->
  <div class="lg:hidden bg-white/95 backdrop-blur-lg border-b border-white/30 p-4 flex items-center justify-between">
    <div class="flex items-center">
      <h1 class="text-lg font-bold text-blue-600"><i class="fas fa-wallet"></i> 取引管理</h1>
    </div>
    <div class="flex gap-2">
      <%= link_to new_transaction_path, class: "bg-green-500 text-white py-2 px-3 rounded-lg hover:bg-green-600 transition-colors text-xs font-medium" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>

  <div class="w-full min-h-screen px-2 sm:px-4 lg:px-6 xl:px-8 py-4 sm:py-6 lg:py-8">
    
    <!-- デスクトップ用ヘッダー -->
    <div class="hidden lg:block bg-white/95 backdrop-blur-lg border border-white/30 rounded-xl lg:rounded-2xl p-4 sm:p-6 mb-4 sm:mb-6 shadow-lg">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
        <div>
          <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-blue-600 mb-2">
            <i class="fas fa-wallet"></i> 取引管理
          </h1>
          <p class="text-sm sm:text-base text-gray-600">収入・支出の記録と管理</p>
        </div>
        <div class="mt-4 sm:mt-0 flex flex-col sm:flex-row gap-2 sm:gap-3">
          <%= link_to new_transaction_path, 
                      class: "bg-green-500 text-white py-2 sm:py-3 px-3 sm:px-4 rounded-lg hover:bg-green-600 transition-colors text-center text-xs sm:text-sm font-medium" do %>
            <i class="fas fa-plus mr-1 sm:mr-2"></i>新規取引
          <% end %>
        </div>
      </div>
    </div>

    <!-- 統計カード -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 lg:gap-6 mb-6 sm:mb-8">
      <div class="bg-white/90 backdrop-blur-lg border border-white/50 rounded-xl lg:rounded-2xl p-3 sm:p-4 lg:p-6 text-center shadow-lg hover:shadow-xl transition-shadow">
        <div class="text-xl sm:text-2xl lg:text-3xl mb-2 lg:mb-3"><i class="fas fa-chart-bar"></i></div>
        <div class="text-lg sm:text-xl lg:text-2xl font-bold text-gray-800 mb-1">
          <%= current_user.transactions.count %>
        </div>
        <div class="text-xs sm:text-sm lg:text-base text-gray-600">総取引数</div>
      </div>

      <div class="bg-white/90 backdrop-blur-lg border border-white/50 rounded-xl lg:rounded-2xl p-3 sm:p-4 lg:p-6 text-center shadow-lg hover:shadow-xl transition-shadow">
        <div class="text-xl sm:text-2xl lg:text-3xl mb-2 lg:mb-3"><i class="fas fa-money-bill-wave"></i></div>
        <div class="text-lg sm:text-xl lg:text-2xl font-bold text-red-600 mb-1">
          <span class="hidden sm:inline">¥</span><%= number_with_delimiter(current_user.current_month_expenses.to_i) %>
        </div>
        <div class="text-xs sm:text-sm lg:text-base text-gray-600">今月の支出</div>
      </div>

      <div class="bg-white/90 backdrop-blur-lg border border-white/50 rounded-xl lg:rounded-2xl p-3 sm:p-4 lg:p-6 text-center shadow-lg hover:shadow-xl transition-shadow">
        <div class="text-xl sm:text-2xl lg:text-3xl mb-2 lg:mb-3"><i class="fas fa-dollar-sign"></i></div>
        <div class="text-lg sm:text-xl lg:text-2xl font-bold text-green-600 mb-1">
          <span class="hidden sm:inline">¥</span><%= number_with_delimiter(current_user.current_month_income.to_i) %>
        </div>
        <div class="text-xs sm:text-sm lg:text-base text-gray-600">今月の収入</div>
      </div>

      <div class="bg-white/90 backdrop-blur-lg border border-white/50 rounded-xl lg:rounded-2xl p-3 sm:p-4 lg:p-6 text-center shadow-lg hover:shadow-xl transition-shadow">
        <div class="text-xl sm:text-2xl lg:text-3xl mb-2 lg:mb-3"><i class="fas fa-star"></i></div>
        <div class="text-lg sm:text-xl lg:text-2xl font-bold text-purple-600 mb-1">
          <span class="hidden sm:inline">¥</span><%= number_with_delimiter(current_user.current_month_oshi_expenses.to_i) %>
        </div>
        <div class="text-xs sm:text-sm lg:text-base text-gray-600">推し活支出</div>
      </div>
    </div>

    <!-- フィルター -->
    <div class="bg-white/90 backdrop-blur-lg border border-white/50 rounded-xl lg:rounded-2xl p-4 sm:p-6 mb-4 sm:mb-6 shadow-lg">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">期間</label>
          <select class="w-full p-2 sm:p-3 border border-gray-300 rounded-lg text-sm focus:ring-blue-500 focus:border-blue-500">
            <option>今月</option>
            <option>先月</option>
            <option>今年</option>
            <option>全期間</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">カテゴリ</label>
          <select class="w-full p-2 sm:p-3 border border-gray-300 rounded-lg text-sm focus:ring-blue-500 focus:border-blue-500">
            <option>全て</option>
            <option>推し活</option>
            <option>生活</option>
            <option>交通</option>
            <option>その他</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">タイプ</label>
          <select class="w-full p-2 sm:p-3 border border-gray-300 rounded-lg text-sm focus:ring-blue-500 focus:border-blue-500">
            <option>全て</option>
            <option>支出</option>
            <option>収入</option>
          </select>
        </div>
        <div class="flex items-end">
          <button class="w-full bg-blue-500 text-white py-2 sm:py-3 px-4 rounded-lg hover:bg-blue-600 transition-colors text-sm font-medium">
            <i class="fas fa-search mr-2"></i>絞り込み
          </button>
        </div>
      </div>
    </div>

    <!-- 取引一覧 -->
    <div class="bg-white/90 backdrop-blur-lg border border-white/50 rounded-xl lg:rounded-2xl p-4 sm:p-6 shadow-lg">
      <h2 class="text-lg sm:text-xl font-bold text-blue-600 mb-3 sm:mb-4 flex items-center">
        <i class="fas fa-list mr-2 sm:mr-3"></i>
        取引履歴
      </h2>

      <% if current_user.transactions.any? %>
        <!-- デスクトップ用テーブル表示 -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-200">
                <th class="text-left py-3 px-4 font-semibold text-gray-600">日付</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-600">カテゴリ</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-600">店舗・メモ</th>
                <th class="text-right py-3 px-4 font-semibold text-gray-600">金額</th>
                <th class="text-center py-3 px-4 font-semibold text-gray-600">満足度</th>
                <th class="text-center py-3 px-4 font-semibold text-gray-600">操作</th>
              </tr>
            </thead>
            <tbody>
              <% current_user.transactions.recent.limit(20).each do |transaction| %>
                <tr class="border-b border-gray-100 hover:bg-white/50 transition-colors">
                  <td class="py-3 px-4 text-sm text-gray-600">
                    <%= transaction.formatted_date %>
                  </td>
                  <td class="py-3 px-4">
                    <div class="flex items-center">
                      <span class="mr-2"><%= transaction.category&.icon_or_default || '📝' %></span>
                      <span class="text-sm font-medium"><%= transaction.category&.display_name || '未分類' %></span>
                    </div>
                  </td>
                  <td class="py-3 px-4">
                    <div class="text-sm">
                      <% if transaction.vendor.present? %>
                        <div class="font-medium text-gray-800"><%= transaction.vendor %></div>
                      <% end %>
                      <% if transaction.memo.present? %>
                        <div class="text-gray-600"><%= transaction.memo %></div>
                      <% end %>
                    </div>
                  </td>
                  <td class="py-3 px-4 text-right">
                    <span class="font-bold <%= transaction.expense? ? 'text-red-600' : 'text-green-600' %>">
                      <%= transaction.formatted_signed_amount %>
                    </span>
                  </td>
                  <td class="py-3 px-4 text-center">
                    <% if transaction.satisfaction_rating %>
                      <span class="text-yellow-600"><%= transaction.satisfaction_stars %></span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4 text-center">
                    <div class="flex justify-center gap-2">
                      <%= link_to edit_transaction_path(transaction), 
                                  class: "text-blue-600 hover:text-blue-800 text-xs" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to transaction_path(transaction), method: :delete, 
                                  class: "text-red-600 hover:text-red-800 text-xs",
                                  data: { confirm: "削除しますか？", "turbo-method": :delete } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- モバイル用カード表示 -->
        <div class="lg:hidden space-y-3">
          <% current_user.transactions.recent.limit(20).each do |transaction| %>
            <div class="bg-white/70 rounded-lg lg:rounded-xl p-3 sm:p-4 border border-blue-200/40 hover:bg-white/80 transition-colors">
              <div class="flex justify-between items-start mb-2">
                <div class="flex items-center flex-1 min-w-0">
                  <span class="mr-2 text-lg"><%= transaction.category&.icon_or_default || '📝' %></span>
                  <div class="min-w-0 flex-1">
                    <div class="font-semibold text-gray-800 text-sm truncate">
                      <%= transaction.category&.display_name || '未分類' %>
                    </div>
                    <div class="text-xs text-gray-600">
                      <%= transaction.formatted_date %>
                    </div>
                  </div>
                </div>
                <div class="text-right ml-3">
                  <div class="font-bold text-sm <%= transaction.expense? ? 'text-red-600' : 'text-green-600' %>">
                    <%= transaction.formatted_signed_amount %>
                  </div>
                  <% if transaction.satisfaction_rating %>
                    <div class="text-xs text-yellow-600"><%= transaction.satisfaction_stars %></div>
                  <% end %>
                </div>
              </div>
              
              <% if transaction.vendor.present? || transaction.memo.present? %>
                <div class="text-xs text-gray-600 mb-2">
                  <% if transaction.vendor.present? %>
                    <div>店舗: <%= transaction.vendor %></div>
                  <% end %>
                  <% if transaction.memo.present? %>
                    <div>メモ: <%= transaction.memo %></div>
                  <% end %>
                </div>
              <% end %>
              
              <div class="flex justify-end gap-3 pt-2 border-t border-gray-200">
                <%= link_to edit_transaction_path(transaction), 
                            class: "text-blue-600 hover:text-blue-800 text-xs" do %>
                  <i class="fas fa-edit mr-1"></i>編集
                <% end %>
                <%= link_to transaction_path(transaction), method: :delete, 
                            class: "text-red-600 hover:text-red-800 text-xs",
                            data: { confirm: "削除しますか？", "turbo-method": :delete } do %>
                  <i class="fas fa-trash mr-1"></i>削除
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

      <% else %>
        <div class="text-center py-8 sm:py-12">
          <div class="text-3xl sm:text-4xl lg:text-5xl mb-4">💰</div>
          <p class="text-gray-500 mb-4 text-sm sm:text-base">取引履歴がありません</p>
          <p class="text-xs sm:text-sm text-gray-400 mb-6">最初の収入・支出を記録してみましょう</p>
          <%= link_to new_transaction_path, 
                      class: "bg-green-500 text-white py-2 sm:py-3 px-4 sm:px-6 rounded-lg hover:bg-green-600 transition-colors text-sm sm:text-base font-medium" do %>
            <i class="fas fa-plus mr-2"></i>最初の取引を追加
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>

<!-- レスポンシブ用のカスタムスタイル -->
<style>
  /* スモールデバイス用の調整 */
  @media (max-width: 640px) {
    .grid-cols-2 > div {
      min-height: 120px;
    }
  }
  
  /* タブレット用の調整 */
  @media (min-width: 768px) and (max-width: 1024px) {
    .lg\:grid-cols-4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  /* デスクトップ用の調整 */
  @media (min-width: 1280px) {
    .lg\:grid-cols-4 > div {
      min-height: 150px;
    }
  }
  
  /* 超ワイドスクリーン用の調整 */
  @media (min-width: 1536px) {
    .w-full {
      max-width: 1536px;
      margin: 0 auto;
    }
  }
</style>