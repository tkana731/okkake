  /* スモールデバイス用の調整 */
  @media (max-width: 640px) {
    .grid-cols-1.sm\:grid-cols-3 > label > div {
      min-height: 80px;
    }
  }
  
  /* 超ワイドスクリーン用の調整 */
  @media (min-width: 1536px) {
    .w-full {
      max-width: 1536px;
      margin: 0 auto;
    }
  }
</style>
